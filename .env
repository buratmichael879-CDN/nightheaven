# ----------------------
# Server / HTTP config
# ----------------------
HOST=127.0.0.1
PORT=3000

# Base directory for public files
BASE_DIR=./public
CSS_DIR=./public/css
JS_DIR=./public/js
IMG_DIR=./public/img
QUARANTINE_DIR=./quarantine

# ----------------------
# Logs
# ----------------------
ACCESS_LOG=./logs/access.log
AUDIT_LOG=./logs/audit.log

# ----------------------
# Authentication
# ----------------------
# Fallback password if Firebase is unavailable
LOGIN_PASSWORD=MeinSicheresPasswort123

# Firebase Realtime Database URL (e.g., https://myproject.firebaseio.com)
FIREBASE_DB_URL=https://myfirebaseproject.firebaseio.com

# Optional Firebase database auth token (service account or secret)
FIREBASE_AUTH_TOKEN=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...

# ----------------------
# Security / Session / CSRF
# ----------------------
# CSRF cookie max age in seconds
CSRF_MAXAGE=3600

# HSTS max-age (seconds) â€” 0 for HTTP-only server
HSTS_MAX_AGE=0

# Session TTL in minutes (after login)
SESSION_TTL_MINUTES=6
